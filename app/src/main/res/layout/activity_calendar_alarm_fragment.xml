<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainCalendar_Alarm_Fragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:gravity="center"
            android:text="알림"
            android:textSize="24sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#AFAEAE" />

        <Button
            android:id="@+id/None"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:text="없음" />

        <Button
            android:id="@+id/everyday"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:text="이벤트 당일 (오전 9시)" />

        <Button
            android:id="@+id/oneago"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:text="1일전 (오전 9시)" />

        <Button
            android:id="@+id/twoago"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:text="2일전 (오전 9시)" />

        <Button
            android:id="@+id/oneweekago"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:text="1주전" />

    </LinearLayout>


</LinearLayout>