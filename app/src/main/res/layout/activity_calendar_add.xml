<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainCalendar_Add">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:background="#00CC2626"
            android:src="@drawable/clear"
            android:text="취소" />

        <ImageButton
            android:id="@+id/save"
            android:layout_width="44dp"
            android:layout_height="30dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="5dp"
            android:background="#00FFFFFF"
            android:src="@drawable/disk1"
            android:text="저장" />


    </LinearLayout>


    <Button
        android:id="@+id/color_change"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="색 바꾸기" />


    <EditText
        android:id="@+id/List_name"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="2020년 3월 26일" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/time"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="#00FFFFFF"
            android:src="@drawable/clock"
            android:text="시간" />

        <Button
            android:id="@+id/time_detail"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="시간 상세" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/clock"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="#00FFFFFF"
            android:src="@drawable/alarm"
            android:text="알림" />

        <Button
            android:id="@+id/clock_detail"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="알림 상세" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/add"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="#00FFFFFF"
            android:src="@drawable/more_small"
            android:text="추가" />

        <Button
            android:id="@+id/add_detail"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="항목 추가" />
    </LinearLayout>



</LinearLayout>