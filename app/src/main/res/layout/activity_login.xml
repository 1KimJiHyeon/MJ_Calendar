<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login_Register">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#ECECEC">

        <ImageView
            android:id="@+id/mark"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="#ECECEC"
            app:srcCompat="@drawable/myongjimark" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_email"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:textColor="#AAAAAA" />

        <ImageButton
            android:id="@+id/delete_loginid"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#FFFFFF"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_pass"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textColor="#AA686666"></EditText>
        <ImageButton
            android:id="@+id/delete_loginpass"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#FFFFFF"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="268dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/login_button"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/logingraybutton"
                android:onClick="onClick"
                android:text="로그인"
                android:textColor="#AA686666"
                android:textSize="22sp" />

            <Button
                android:id="@+id/register_button"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/loginwhitebutton"
                android:singleLine="false"
                android:text="회원가입"
                android:textColor="#AA686666"
                android:textSize="22sp" />
        </LinearLayout>

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="#AAAAAA" />

</LinearLayout>