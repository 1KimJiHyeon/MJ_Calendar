<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainCalendar_Time_Fragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#DADADA"
        android:gravity="center"
        android:text="기간"
        android:textSize="24sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AFAEAE" />


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#DADADA"
        tools:layout_marginTop="7dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/Start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시작"
                android:textAlignment="center"
                android:textSize="24sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#DADADA" />

            <TextView
                android:id="@+id/Start_date"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/Start_clock"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#DADADA" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/Start_date_imagebutton"
                    android:layout_width="54dp"
                    android:layout_height="50dp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/calendar_small" />

                <Button
                    android:id="@+id/Start_date_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="시작 날짜 추가" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/Start_time_imagebutton"
                    android:layout_width="54dp"
                    android:layout_height="50dp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/clock_small" />

                <Button
                    android:id="@+id/Start_time_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="시작 시간 추가" />
            </LinearLayout>

            <Button
                android:id="@+id/Checkbutton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="날짜/시간 확인" />


        </LinearLayout>

        <View
            android:id="@+id/divider4"
            android:layout_width="3dp"
            android:layout_height="277dp"
            android:background="#DADADA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/End"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="종료"
                android:textAlignment="center"
                android:textSize="24sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#DADADA" />

            <TextView
                android:id="@+id/End_date"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/End_clock"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#DADADA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/End_date_imagebutton"
                    android:layout_width="54dp"
                    android:layout_height="50dp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/calendar_small" />

                <Button
                    android:id="@+id/End_date_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="종료 날짜 추가" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/End_time_imagebutton"
                    android:layout_width="54dp"
                    android:layout_height="50dp"
                    android:background="#00FFFFFF"
                    android:src="@drawable/clock_small" />

                <Button
                    android:id="@+id/End_time_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="종료 시간 추가" />
            </LinearLayout>

            <Button
                android:id="@+id/Checkbutton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="날짜/시간 확인" />


        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#DADADA" />

</LinearLayout>