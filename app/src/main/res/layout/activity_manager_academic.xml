    <Switch
        android:id="@+id/switch_auto_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:switchMinWidth="50sp"
        android:layout_marginHorizontal="15sp"
        android:textSize="20sp"
        android:text="Auto update"
        android:paddingRight="20sp"
        android:checked="true"/>

    <TextView
        android:id="@+id/text_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=
            "Latest updates : 2020.99.99\nLast update : 2020.88.88"
        android:textSize="20sp"
        android:layout_marginHorizontal="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_updates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update : "
            android:textSize="20sp"
            android:layout_marginHorizontal="15sp"/>

        <Spinner
            android:id="@+id/spinner_updates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/update_log"
        android:layout_width="match_parent"
        android:layout_height="350sp"
        android:text="Changes :\n"
        android:textSize="20sp"
        android:layout_marginHorizontal="15sp"
        android:layout_marginVertical="10sp" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update now" />

    <Button
        android:id="@+id/btn_load_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
