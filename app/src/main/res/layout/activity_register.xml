<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#ECECEC">

        <ImageView
            android:id="@+id/register_ima"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/account" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_name"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint=" 이름"
            android:inputType="textPersonName"
            android:textColor="#AA686666" />

        <ImageButton
            android:id="@+id/delete_name"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_email"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint=" 이메일"
            android:inputType="textEmailAddress"
            android:textColor="#AA686666" />

        <ImageButton
            android:id="@+id/delete_email"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_pass"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:ems="10"
            android:hint=" 비밀번호"
            android:inputType="textPassword"
            android:textColor="#AA686666" />

        <ImageButton
            android:id="@+id/delete_pass"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_repass"
            android:layout_width="380dp"
            android:layout_height="50sp"
            android:ems="10"
            android:hint=" 비밀번호 확인"
            android:inputType="textPassword"
            android:textColor="#AA686666" />

        <ImageButton
            android:id="@+id/delete_repass"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="177sp">

        <Button
            android:id="@+id/register"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/logingraybutton"
            android:text="회원가입"
            android:textColor="#AA686666"
            android:textSize="22sp" />
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginTop="10sp"
        android:background="#AAAA" />
</LinearLayout>